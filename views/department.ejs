<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Department</title>
</head>
<style>
    .card img {
        width: 100%;
        height: 50%;
    }

    .star {
        color: red;
    }

    .depts {
        display: grid;
        grid-template-columns: repeat(4, 1fr);

    }
</style>

<body>
    <nav class="navbar navbar-light bg-light d-flex justify-content-end">
        <form action="/dept/getallemp" class="form-inline">
            <button class="btn btn-primary" type="submit">GET All Employees </button>

        </form>
    </nav>

    <div class="container ">
        <h1 class="text-center"> Department Page</h1>

        <% if(typeof err !='undefined' ){ %>
            <div onclick="de()">
                <% err.forEach(i=>{ %>
                    <div class="alert alert-warning alert-dismissible fade show mb-2" id="myalert" role="alert">
                        <strong>alerts </strong>
                        <%- i.msg %>
                            <button type="button" class="btn-close" id="mybtn" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                    <%}); %>
            </div>
            <% } %>
    </div>

    <div class="container">


    </div>










    <div class="container shadow">




        <!--  tabel view-->
        <p>
            <button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample"
                aria-expanded="false" aria-controls="collapseExample">
                tabel view of departments
            </button>
        </p>
        <div class="collapse" id="collapseExample">
            <div class=" dept_table">
                <table class="table table-striped" id="calldesc">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th scope="col">department id</th>
                            <th scope="col">department name</th>
                            <th scope="col">department desc</th>

                        </tr>
                    </thead>
                    <tbody>



                        <% if(typeof depts !='undefined' ){ %>
                            <% depts.forEach(i=>{ %>
                                <tr>
                                    <th scope="row">
                                        <%- i.dept_id %>
                                    </th>
                                    <td>
                                        <%- i.dept_name %>
                                    </td>
                                    <td>
                                        <%- i.dept_desc %>
                                    </td>


                                </tr>



                                <%}); %>
                                    <% } %>







                    </tbody>
                </table>


            </div>



        </div>




        <!-- grid view -->
        <div class="w-100 depts">



            <% if(typeof depts !='undefined' ){ %>
                <% depts.forEach(i=>{ %>

                    <div class="card m-5" style="width: 15rem;">
                        <img class="card-img-top"
                            src="https://cdn.pixabay.com/photo/2017/08/01/16/43/hanger-2566555__340.jpg"
                            alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%- i.dept_name%>
                            </h5>
                            <p class="card-text">
                                <%- i.dept_desc%>
                            </p>
                            <a href="#addemp" class="btn btn-primary   w-100"> Add Department</a>
                            <a href="/dept/getemp/<%-i.dept_id%>" class="btn btn-primary  mt-2 w-100">Show or
                                Add
                                Employees</a>
                        </div>
                    </div>




                    <%}); %>

                        <% } %>




        </div>
    </div>




    <!-- form of department page -->
    <div id="addemp" class="col-md-7 mt-4 d-flex justify-content-center align-self-center shadow m-auto">


        <form action="/dept/adddept" method="POST" enctype="multipart/form-data">
            <div>
                <h1>Add Department</h1>
            </div>
            <div class="form-group p-3">

                <label>Department Name <span class="star">*</span></label>
                <input type="text" class="form-control" name="dept_name" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter Department Name " required>

            </div>
            <div class="form-group p-3">
                <label>Department Id <span class="star">*</span></label>
                <input type="text" name="dept_id" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" value="<%- dept_id%>" readonly>

            </div>
            <div class="form-group p-3">
                <label>Department Image <span class="star">*</span></label>
                <input type="file" name="dept_image" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" readonly>

            </div>

            <div class="form-group p-3">
                <label>Department desc<span class="star">*</span></label>
                <input type="text" name="dept_desc" class="form-control" id="exampleInputEmail1"
                    aria-describedby="emailHelp" placeholder="Enter department desc" required>

            </div>


            <div class="form-group p-3">
                <button type="submit" class="form-control p-2 bg-primary text-white">
                    Add Department
                </button>
            </div>

        </form>


    </div>


    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
    <script>
        function myfun() {
            const btn = document.querySelector('#change_text')
            btn.innerHTML = "Employee added"
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {
                    console.log("running");
                }
            };
            xhttp.open("POST", "/dept/addemp");
            xhttp.send();
        }

    </script>

</body>

</html>
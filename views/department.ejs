<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/5c174d451e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <title>Department</title>
</head>
<style>
    .card img {
        width: 100%;
        height: 50%;
    }

    .star {
        color: red;
    }
</style>

<body>
    <nav class="navbar navbar-light bg-light d-flex justify-content-end">
        <form action="/dept/getallemp" class="form-inline">
            <button class="btn btn-primary" type="submit">GET All Employees </button>
        </form>
    </nav>

    <!-- heading of department page   -->

    <div class="container">
        <h1 class="text-center"> Department Page</h1>
        <% if(typeof err !='undefined' ){ %>
            <div onclick="de()">
                <% err.forEach(i=>{ %>
                    <div class="alert alert-warning alert-dismissible fade show mb-2" id="myalert" role="alert">
                        <strong>alerts </strong>
                        <%- i.msg %>
                            <button type="button" class="btn-close" id="mybtn" data-bs-dismiss="alert"
                                aria-label="Close"></button>
                    </div>
                    <%}); %>
            </div>
            <% } %>
    </div>














    <!---------------------- tabs of the home page ---------------------------->

    <div class="container">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#gridv" role="tab" aria-controls="home"
                    aria-selected="true">Grid View</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#tabelv" role="tab" aria-controls="profile"
                    aria-selected="false">Tabel View</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="contact-tab" data-toggle="tab" href="#add_dept" role="tab"
                    aria-controls="contact" aria-selected="false">add Department</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="emp-tab" data-toggle="tab" href="#emps" role="tab" aria-controls="profile"
                    aria-selected="false">all employees</a>
            </li>

        </ul>


        <div class="tab-content" id="myTabContent">

            <!--------------------------- show departments with grid system  ----------------------->
            <div class="tab-pane fade show active" id="gridv" role="tabpanel" aria-labelledby="home-tab">
                <div class="container shadow depts d-flex ">
                    <div class="row">




                        <% if(typeof depts !='undefined' ){ %>
                            <% depts.forEach(i=>{ %>

                                <div class="card col-md-3 m-5">
                                    <img class="card-img-top"
                                        src="https://cdn.pixabay.com/photo/2017/08/01/16/43/hanger-2566555__340.jpg"
                                        alt="Card image cap">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%- i.dept_name%>
                                        </h5>
                                        <p class="card-text">
                                            <%- i.dept_desc%>
                                        </p>
                                        <!-- <a href="" class="btn btn-primary   w-100"> Add Department</a> -->
                                        <a href="/dept/getemp/<%-i.dept_id%>" class="btn btn-primary  mt-2 w-100">Show
                                            or
                                            Add
                                            Employees</a>
                                    </div>
                                </div>
                                <%}); %>
                                    <% } %>
                    </div>
                </div>
            </div>



            <!----------------------------------- tabel view of the departmets tabs  --------------------------->
            <div class="tab-pane fade" id="tabelv" role="tabpanel" aria-labelledby="profile-tab">

                <div class=" dept_table">
                    <table class="table table-striped" id="calldesc">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col">department id</th>
                                <th scope="col">department name</th>
                                <th scope="col">department desc</th>

                            </tr>
                        </thead>
                        <tbody>



                            <% if(typeof depts !='undefined' ){ %>
                                <% depts.forEach(i=>{ %>
                                    <tr>
                                        <th scope="row">
                                            <%- i.dept_id %>
                                        </th>
                                        <td>
                                            <%- i.dept_name %>
                                        </td>
                                        <td>
                                            <%- i.dept_desc %>
                                        </td>

                                    </tr>



                                    <%}); %>
                                        <% } %>

                        </tbody>
                    </table>
                </div>
            </div>


            <!-----------------------------  add department form  ------------------------------------->

            <div class="tab-pane fade" id="add_dept" role="tabpanel" aria-labelledby="contact-tab">
                <div id="addemp" class="col-md-7 d-flex justify-content-center align-self-center shadow m-auto mt-5">

                    <form action="/dept/adddept" method="POST" enctype="multipart/form-data">
                        <div>
                            <h1>Add Department</h1>
                        </div>
                        <div class="form-group p-3">

                            <label>Department Name <span class="star">*</span></label>
                            <input type="text" class="form-control" name="dept_name" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter Department Name " required>

                        </div>
                        <div class="form-group p-3">
                            <label>Department Id <span class="star">*</span></label>
                            <input type="text" name="dept_id" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" value="<%- dept_id%>" readonly>

                        </div>
                        <div class="form-group p-3">
                            <label>Department Image <span class="star">*</span></label>
                            <input type="file" name="dept_image" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" readonly>

                        </div>

                        <div class="form-group p-3">
                            <label>Department desc<span class="star">*</span></label>
                            <input type="text" name="dept_desc" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="Enter department desc" required>

                        </div>
                        <div class="form-group p-3">
                            <button type="submit" class="form-control p-2 bg-primary text-white">
                                Add Department
                            </button>
                        </div>


                    </form>


                </div>

            </div>




            <!------------------------------ all employees details tabel    ------------------>
            <div class="tab-pane fade show active" id="emps" role="tabpanel" aria-labelledby="home-tab">


                <div class="col-md-8 d-flex align-self-center justify-content-center m-auto ">
                    <table class="table table-striped">
                        <thead class="bg-dark text-white">
                            <tr>
                                <th scope="col">Employee id</th>
                                <th scope="col">Employee Name</th>
                                <th scope="col">Employe email</th>
                                <th scope="col">Company name</th>
                            </tr>
                        </thead>
                        <tbody>



                            <% if(typeof emp !='undefined' ){ %>
                                <% emp.forEach(i=>{ %>

                                    <tr>
                                        <th scope="row">
                                            <%- i.emp_id %>
                                        </th>
                                        <td>
                                            <%- i.emp_name %>
                                        </td>
                                        <td>
                                            <%- i.emp_email%>
                                        </td>
                                        <td>
                                            <%- i.cop_name%>
                                        </td>
                                    </tr>



                                    <%}); %>
                                        <% } %>







                        </tbody>
                    </table>
                </div>


            </div>
            <!-------------------------------  fade pannel end here ---------------------->




        </div>















        <!---------------------------------   boootstrap links --------------------------------->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>

        <!----------------------------- javascript here --------------------------------->

        <script>
            function myfun() {
                const btn = document.querySelector('#change_text')
                btn.innerHTML = "Employee added"
                var xhttp = new XMLHttpRequest();
                xhttp.onreadystatechange = function () {
                    if (this.readyState == 4 && this.status == 200) {
                        console.log("running");
                    }
                };
                xhttp.open("POST", "/dept/addemp");
                xhttp.send();
            }

        </script>

</body>

</html>